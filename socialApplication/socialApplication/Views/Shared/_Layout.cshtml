<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Share Tube Vids</title>
    <script>
        __root = '@Request.ApplicationPath';
        if (__root.length > 1) {
            if (!__root.endsWith('/')) __root += '/';
            if (!__root.startsWith('/')) __root = '/' + __root;
        }
    </script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
    <link href="~/Content/main.css" rel="stylesheet" />

    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>                    
                </button>
               <span> <img src="~/images/logosm.png" /></span> @*Html.ActionLink("Share YouTube Vids", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("TimeLine", "Main", "Home")</li>
                    <li>@Html.ActionLink("Register", "Create", "Register")</li>
                    <li>@Html.ActionLink("SignOut", "SignOut", "Account")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -
                <img src="~/images/logosm.png" /> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/like.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
