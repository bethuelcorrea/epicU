@model IEnumerable<ShoppingCart.Context.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-responsive table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sku)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sku)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="@Url.Action("Details", "Products", new { id = item.Id })"><img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="350px" /></a>
</td>
        <td>
            <a href="@Url.Action("Details", "Products", new { id = item.Id })"> @Html.DisplayFor(modelItem => item.Price) </a>    
                  
        </td>
        <td>
        @*
          @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
          @Html.ActionLink("Details", "Details", new { id=item.Id }) |
          @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        *@
        </td>
    </tr> 
}

</table>
